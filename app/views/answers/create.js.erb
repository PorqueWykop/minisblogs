<% if @answer.new_record? %>
        $('input#answer_status').effect('highlight', { color: 'red' });
<% else %>
        $('div#<%= dom_id(@tweet) %>').empty().append("<%= escape_javascript(render @tweet) %>");
        $('input#answer_status').val('');
        $('div#<%= dom_id(@answer) %>').effect('highlight');
<% end %>